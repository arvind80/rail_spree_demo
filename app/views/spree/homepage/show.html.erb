<% content_for :banner do %>
  <section>
    <div>
      <ul>
        <li id="b1">
          <a href="/pg/new-arrivals">
            <%= image_tag "store/homepage/slideshow/new-arrivals.jpg", :width => 960, :height => 303, :alt => "New Arrivals" %>
          </a>
        </li>
        <li id="b2">
          <a href="/pg/car-stereos">
            <%= image_tag "store/homepage/slideshow/car-stereos.jpg", :width => 960, :height => 303, :alt => "New Arrivals" %>
          </a>
        </li>
        <li id="b3">
          <a href="/pg/accessory-sale">
            <%= image_tag "store/homepage/slideshow/accessories.jpg", :width => 960, :height => 303, :alt => "New Arrivals" %>
          </a>
        </li>
        <li id="b4">
          <a href="/pg/clearance-event">
            <%= image_tag "store/homepage/slideshow/clearance.jpg", :width => 960, :height => 303, :alt => "New Arrivals" %>
          </a>
        </li>
      </ul>
    </div>
  </section>

  <nav id="banner-nav">
    <ul>
      <li class="first"><a href="#">&laquo;</a></li>
      <li class="current" id="b1_handle" ><a href="#">new arrivals</a></li>
      <li id="b2_handle"><a href="#">car stereos</a></li>
      <li id="b3_handle"><a href="#">accessory sale</a></li>
      <li id="b4_handle"><a href="#">clearance event</a></li>
      <li class="last"><a href="#">&raquo;</a></li>
    </ul>
  </nav>

<% end %>


<div id="taxons" class="clearfix">
  <% @product_groups.each do |group| %>
    <% url = pg_search_path(:product_group_name => group.permalink) %>
    <div class="taxon">
      <h3><%= link_to group.name, url %></h3>
      <%= link_to url do %>
        <%= image_tag("store/homepage/taxons/#{group.permalink}.jpg", :class => "image", :alt => group.name) %><br>
      <% end %>
      <%= link_to 'View More', url, :class => 'button' %>
    </div>
  <% end %>
</div>

<div id="all-products" class="list-box">
  <h2>All Products</h2>
  <div class="left">
    <ul>
      <% if @taxons!=nil %>
       <% @taxons.each_with_index do |taxon,i| %>
        <% next if i % 2 == 0 %>
        <li><%= raw link_to(taxon.name, seo_url(taxon)) %></li>
      <% end %>
       <% end %>
    </ul>
  </div>
  <div class="right">
    <ul>
    <% if @taxons!=nil %>
      <% @taxons.each_with_index do |taxon,i| %>
        <% next if i % 2 == 1 %>
        <li><%= raw link_to(taxon.name, seo_url(taxon)) %></li>
      <% end %>
        <% end %>
    </ul>
  </div>
</div>

<div id="contact">
  <div>
    <h2>Contact Us</h2>
    <p class="phone">(301) 560-2000</p>
    <p><a href="mailto:sales@railsdogradio.com" class="email">sales@railsdogradio.com</a>
    <table>
      <tr>
        <td>Mon-Fri</td> <td>10am - 6pm CST</td>
      </tr>
      <tr>
        <td>Sat</td> <td>10am - 4pm CST</td>
      </tr>
      <tr>
        <td>Sun</td> <td>CLOSED</td>
      </tr>
    </table>
  </div>
</div>

<% if tracker = Spree::Tracker.current %>
  <script type="text/javascript">
    var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
    document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
  </script>

  <script type="text/javascript">
    var pageTracker = _gat._getTracker("<%= tracker.analytics_id %>");
    pageTracker._initData();
    pageTracker._trackPageview('/demo_launch');
  </script>
<% end %>
